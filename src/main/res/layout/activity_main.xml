<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="AGROCONTROL"
            android:textSize="30sp"
            android:textStyle="bold"
            tools:textColor="@android:color/background_dark"
            tools:textColorHighlight="@android:color/background_dark" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:text="ESTADO DE COMEDEROS" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:text="APERTURA COMPUERTAS" />

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:text="PROGRAMAR APERTURA COMPUERTAS" />

        <Button
            android:id="@+id/button7"
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:text="ESTADO SUMINISTROS" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>